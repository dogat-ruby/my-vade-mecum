<h1>Listing books</h1>

<table width= "600"%>
  <thead>
    <tr>
      <th>Title</th>
      <th>ISBN</th>
      <th>Author</th>
      <th colspan="5"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.bk_title %></td>
        <td><%= book.bk_isbn %></td>
        <td><%= book.bk_author %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

