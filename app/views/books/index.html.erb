<h1>Listing books</h1>

<table width= "600" class="table table-bordered"%>
  <thead>
    <tr>
      <th>Title</th>
      <th>ISBN</th>
      <th>Author</th>
      <th colspan="5"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.isbn %></td>
        <td><%= book.author %></td>
        <td><%= link_to 'Show', book %></td>
        <% if can? :update, book %>
          <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <% end %>
        <% if can? :destroy, book %>
          <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create, Book %>
  <%= link_to 'New Book', new_book_path %>
<% end %>
